<Window x:Class="SA.Test.CommandLine.View.WindowMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:system="clr-namespace:System;assembly=netstandard"
        Title="Command Line Test"
        Width="640"
        MinWidth="540"
        SizeToContent="Height"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Window.Resources>
        <Thickness x:Key="paddingBottom">0 6 0 0</Thickness>
        <Thickness x:Key="paddingOuter">12 0 12 6</Thickness>
        <Thickness x:Key="paddingButton">12 0 12 2</Thickness>
        <Thickness x:Key="stackMargin">0 12 0 0</Thickness>
        <system:Double x:Key="splitterSize">10</system:Double>
        <Style TargetType="CheckBox">
            <Setter Property="IsChecked" Value="True"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="{StaticResource paddingButton}"/>
        </Style>
        <Style TargetType="TreeViewItem">
            <Setter Property="IsExpanded" Value="True"/>
            <Style.Triggers>
                <Trigger Property="HasItems" Value="True">
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Foreground" Value="Navy"/>
                </Trigger>
                <Trigger Property="HasItems" Value="False">
                    <Setter Property="FontWeight" Value="Normal"/>
                    <Setter Property="Foreground" Value="DarkMagenta"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="GridSplitter">
            <Style.Triggers>
                <Trigger Property="ResizeDirection" Value="Rows">
                    <Setter Property="Height" Value="{StaticResource splitterSize}"/>
                </Trigger>
                <Trigger Property="ResizeDirection" Value="Columns">
                    <Setter Property="Width" Value="{StaticResource splitterSize}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Cyan"/>
                </Trigger>
            </Style.Triggers>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Background" Value="LightCyan"/>
        </Style>
    </Window.Resources>
    <Border Padding="{StaticResource paddingOuter}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0">
                <Label Target="{Binding ElementName=textBoxCommandLine}">_Command Line:</Label>
            </Border>
            <Border Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0">
                        <TextBox Grid.Row="1" x:Name="textBoxCommandLine" AcceptsReturn="False" AcceptsTab="False" Background="LightYellow" TextWrapping="Wrap" ToolTip="Ctrl+Enter: parse">
                            -R /Q F1 /C+ -InputDirectory: -qwerty:*.wepb /Q F1 F2 /InputFileMask:*.webm /Q+ -R- /LogFile:"my long log file name.Log.txt" /OutputDirectory:\sa\media -/OutputDirectory:.
                        </TextBox>
                    </Border>
                    <Border Grid.Column="1" Padding="10 0 10 10">
                        <StackPanel>
                            <TextBlock>Case Sensitive:</TextBlock>
                            <CheckBox x:Name="checkBoxCaseSensitiveKeys" Margin="{StaticResource stackMargin}">_Keys</CheckBox>
                            <CheckBox x:Name="checkBoxCaseSensitiveAbbreviations" Margin="{StaticResource stackMargin}">_Abbreviations</CheckBox>
                            <CheckBox x:Name="checkBoxCaseSensitiveFiles" Margin="{StaticResource stackMargin}">_File Names</CheckBox>
                            <Button x:Name="buttonParse" Margin="{StaticResource stackMargin}" ToolTip="Ctrl+Enter">_Parse</Button>
                            <Button x:Name="buttonDocumentation" Margin="{StaticResource stackMargin}" ToolTip="F1">_Documentation...</Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
            <Border Grid.Row="2" Padding="{StaticResource paddingBottom}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Background="Yellow">
                        <TreeView>
                            <TreeViewItem Header="Options">
                                <TreeViewItem x:Name="treeViewItemOptionsSwitch" Header="Switches"/>
                                <TreeViewItem x:Name="treeViewItemOptionsValue" Header="Values"/>
                                <TreeViewItem x:Name="treeViewItemFiles" Header="Files"/>
                            </TreeViewItem>
                        </TreeView>
                    </Border>
                    <GridSplitter Grid.Column="1" ResizeDirection="Columns"/>
                    <Border Grid.Column="2" Background="Azure">
                        <TreeView>
                            <TreeViewItem Header="Errors">
                                <TreeViewItem x:Name="treeViewItemUnrecognized" Header="Unrecognized"/>
                                <TreeViewItem x:Name="treeViewItemRepeatedSwitches" Header="Repeated Switches"/>
                                <TreeViewItem x:Name="treeViewItemRepeatedValues" Header="Repeated Values"/>
                                <TreeViewItem x:Name="treeViewItemRepeatedFiles" Header="RepeatedFiles"/>
                            </TreeViewItem>
                        </TreeView>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
