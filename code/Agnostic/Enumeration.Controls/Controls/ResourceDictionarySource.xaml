<FrameworkContentElement x:Class="SA.Agnostic.UI.Controls.ResourceDictionarySource"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:own="clr-namespace:SA.Agnostic.UI.Controls"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <FrameworkContentElement.Resources>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="4 3 4 0"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="8 5 8 0"/>
        </Style>
        <Style TargetType="own:StyledCheckBox">
            <Setter Property="Margin" Value="8 5 8 0"/>
        </Style>
        <Style TargetType="own:StyledTextBlockName">
            <Setter Property="Margin" Value="4 0 4 0"/>
        </Style>
        <Style TargetType="own:StyledTextBlockValue">
            <Setter Property="Margin" Value="4 0 4 0"/>
        </Style>
        <Style TargetType="own:StyledBorderName">
            <Setter Property="BorderBrush" Value="{x:Static SystemColors.ActiveBorderBrush}"/>
            <Setter Property="BorderThickness" Value="0 0 0 1"/>
        </Style>
        <Style TargetType="own:StyledBorderValue">
            <Setter Property="BorderBrush" Value="{x:Static SystemColors.ActiveBorderBrush}"/>
            <Setter Property="BorderThickness" Value="0 1 0 0"/>
        </Style>
    </FrameworkContentElement.Resources>
</FrameworkContentElement>
